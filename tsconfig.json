{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./index.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ]
}
